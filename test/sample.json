{
    "$id": "https://example.com/schemas/customer",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "email": {
            "type": "string"
        },
        "password": {
            "type": "string"
        },
        "contactNo": {
            "type": "string"
        },
        "pan": {
            "type": "string"
        },
        "address": {
            "type": "object",
            "properties": {
                "stOne": {
                    "type": "string"
                },
                "stTwo": {
                    "type": "string"
                },
                "city": {
                    "type": "string"
                },
                "country": {
                    "type": "string"
                },
                "pincode": {
                    "type": "number"
                }
            },
            "required": [
                "stOne",
                "city",
                "pincode"
            ]
        }
    },
    "required": [
        "name",
        "email",
        "password",
        "address"
    ]
}